<div style="display:flex; padding-top: 0.5em; padding-left: 5em;">
    
        <%= form_tag search_path, :method => 'get' do %>
        <div class="col-xs-12" style="border: 1px solid; display: flex; flex-direction: horizontal;">
            <div class="input-group-btn search-panel" style="">
                <select name="filter" id="search_param" class="btn btn-default form-control dropdown-toggle" style="border-right:none; width: 7em; border-bottom:none; margin-left: 0.5em;" data-toggle="dropdown">
                    <option>Haiku</option>
                    <option>Users</option>
                    <option>Haiku by tag</option>
                </select>
            </div>
            <div class=""><%= text_field_tag :search, params[:search], class:"form-control", style:"width: 25em;border-radius: 0px; margin-left: 7em;" %></div>
            <div class=""><%= submit_tag "Search", class:"btn btn-default", style:"margin-left:-0.1em; border-left:none;border-top-left-radius: 0px;border-bottom-left-radius: 0px;" %></div>
            </div>
        <% end %>
    
</div> 
