<div id="search_bar_container">
    
        <%= form_tag search_path, :method => 'get' do %>
        <div class="col-xs-12" id="search_bar_form_container">
            <div class="input-group-btn search-panel">
                <select name="filter" id="search_param" class="btn btn-default form-control dropdown-toggle" data-toggle="dropdown">
                    <option>Haiku</option>
                    <option>Users</option>
                    <option>Haiku by tag</option>
                </select>
            </div>
            <div class=""><%= text_field_tag :search, params[:search], class:"form-control", id:"input" %></div>
            <div class=""><%= submit_tag "Search", class:"btn btn-default", id:"button" %></div>
            </div>
        <% end %>
    
</div> 
