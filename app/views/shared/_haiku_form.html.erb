<%= form_with(model: @haiku, local: true) do |f| %>
  <div class="col-md-12" style="">
    <section class="user_info">
      <h3>
        <%= link_to gravatar_for(current_user, size: 25), current_user %>
        <%= @user.name %>
      </h3>
    </section>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <select name="visibility" class="form-control" id="exampleFormControlSelect1">
        <option>Public</option>
        <option>Private</option>
      </select>
    </div>
  </div>
  <div class="col-md-8">
    <input class="form-control form-control-lg" id="formFileLg" type="file" />
  </div>
  <div class="col-md-12">
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field mb-3">
      <%= f.text_field :verse_1, placeholder: "First Verse", class: "form-control" %>
      <%= f.text_field :verse_2, placeholder: "Second Verse",  class: "form-control" %>
      <%= f.text_field :verse_3, placeholder: "Third Verse",  class: "form-control" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
  <div class="col-md-6">
  </div>
  <div class="col-md-6" style="padding-bottom: 1em;">
    <a>make it challenge</a>
  </div>
  <div class="col-md-12" style="border-bottom: 1px solid #eeeeee">
  </div>
  <div class="col-md-8" style="padding-top: 1em;">
    <label for="inputPassword" class="col-sm-1 col-form-label" style="padding-top:0.5em;">#</label>
    <div class="col-sm-10">
      <%= f.text_field :tag, placeholder: "Add hash tag ...", class: "form-control"%>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $("#micropost_image").bind("change", function() {
  const size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
  alert("Maximum file size is 5MB. Please choose a smaller
  file.");
  $("#micropost_image").val("");
  }
  });
</script>
