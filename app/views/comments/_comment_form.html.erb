<%= form_with(model: @comment, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
<%= f.text_area :content, placeholder: "Compose new comment...", required: true, class: "form-control" %>
<%= hidden_field_tag :micropost_id, micropost_id %>
</div><%= f.submit "Comment", class: "btn btn-primary" %>
<% end %>