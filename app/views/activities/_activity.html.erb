<div class="activityFeed" style="font-size: 15px;">
    <h1>My Activities</h1>
    <br>
    <% @activities.each do |activity| %>

        <%= link_to activity.owner.name, activity.owner%>
        <!-- performed action on <%= link_to activity.trackable, activity.trackable %> -->
        <%= render_activity activity%>
        <br>
        ---------------------------------------------------------------------------------------------------------------
        <br>
        <%= activity.inspect%>
        <br>
        ---------------------------------------------------------------------------------------------------------------
        <br>
    <% end %>
</div>