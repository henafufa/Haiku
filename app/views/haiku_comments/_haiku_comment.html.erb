<div style="margin-bottom: 10px; margin-top:10px;"  id="haiku-comment-<%= haiku_comment.id %>">
  <div class="row" >
    <div class="col">
      <%= link_to gravatar_for(haiku_comment.user, size: 25), haiku_comment.user %>
    </div>
    <div class="col-md-10 comment-section">
      <div>
        <h5 class="card-subtitle mb-2 strong"><b><%= link_to haiku_comment.user.name, haiku_comment.user, style:"color:black" %></b></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= time_ago_in_words(haiku_comment.created_at) %></h6>
      </div>
      <div>
        <p><%= haiku_comment.verse_1 %></p>
        <p><%= haiku_comment.verse_2 %></p>
        <p><%= haiku_comment.verse_3 %></p>
      </div>
    </div>
  </div>
  <div class="row" style="margin-top: 10px">
    <div class="col-">
    </div>
    <div class="col-md-10">
      <% if current_user?(haiku_comment.user) %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" style="margin-right: 5px">
          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
          <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
        </svg>
        <%= link_to "delete", haiku_comment, method: :delete, data: { confirm: "Are you sure?" }, style:"color: black", requird: true %>
      <% end %>
    </div>
  </div>
</div>
