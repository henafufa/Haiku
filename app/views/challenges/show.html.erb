<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <% if @challenges.any? %>
        <% @challenges.each do |challenge| %>
            <div class="col-md-10" style="border: 1px solid #ddd; margin-top:50px; padding-bottom: 20px;">  
                <%= render 'challenges/my_challenge', from_my_challenge: true, challenge: challenge %>   
            </div>
        <% end %>
    <% else %>
    <h3>You didn't created any challenge. please click <%= link_to "here" , root_path %> to create challenge</h3>
    <% end %>
    </div>
    <div class="col-md-2"></div>
</div>